<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- XML Syntax Highlighter Styles -->
	<Style x:Key="XMLKeywordStyle">
		<Setter Property="TextElement.Foreground" Value="#569cd6" />
	</Style>

	<Style x:Key="XMLCommentStyle">
		<Setter Property="TextElement.Foreground" Value="#608b4e" />
	</Style>

	<Style x:Key="XMLTextStyle">
		<Setter Property="TextElement.Foreground" Value="#c8c8c8" />
	</Style>

	<Style x:Key="XMLAttributeStyle">
		<Setter Property="TextElement.Foreground" Value="#92caf4" />
	</Style>

	<Style x:Key="XMLDelimiterStyle">
		<Setter Property="TextElement.Foreground" Value="#808080" />
	</Style>

	<Style x:Key="XMLDocumentStyle" TargetType="FlowDocument">
		<Setter Property="FontFamily" Value="Consolas" />
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="PagePadding" Value="0"/>
	</Style>

</ResourceDictionary>