<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CustomControls">

	<Style TargetType="{x:Type local:LedIndicator}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="local:LedIndicator">
						<Border BorderThickness="1" BorderBrush="Black" SnapsToDevicePixels="True">
						<Grid>
						<Rectangle x:Name="PART_Lit" Fill="{TemplateBinding Color}" Margin="1" />
						<Rectangle x:Name="PART_Dark" />
						</Grid>
					</Border>
				</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

</ResourceDictionary>