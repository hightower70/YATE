											</GeometryDrawing.Geometry>
										</GeometryDrawing>
									</DrawingGroup>
								</DrawingGroup>
							</DrawingImage.Drawing>
						</DrawingImage>
					</Image.Source>
				</Image>
			</Button>

			<!-- Pause button -->
			<Button Width="36" Height="36" Margin="2" ToolTip="Pause" Command="{Binding ExecutionControl.DebugPauseCommand}">
				<Image Margin="2">
					<Image.Source>
						<DrawingImage>
							<DrawingImage.Drawing>
								<DrawingGroup>
									<GeometryDrawing Brush="#FFEFF0F1" >
