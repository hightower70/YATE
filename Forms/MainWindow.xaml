			<!-- Debug reset -->
			<Button Width="36" Height="36" Margin="15,2,2,2" ToolTip="Reset" Command="{Binding ExecutionControl.DebugResetCommand}">
				<Image Margin="4" >
					<Image.Source>
						<DrawingImage>
							<DrawingImage.Drawing>
								<GeometryDrawing Brush="#FFEFF0F1">
												<GeometryDrawing.Geometry>
